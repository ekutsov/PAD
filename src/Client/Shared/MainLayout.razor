@inherits LayoutComponentBase

<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout>
    <RadzenHeader>
        <div class="row justify-content-space-start align-items-center">
            <div class="col-6 d-flex align-items-center">
                <RadzenSidebarToggle Click="@SidebarToggleClick"></RadzenSidebarToggle>
                <RadzenLabel Text="Personal Assistant for Development" Style="font-size: 20px"></RadzenLabel>
            </div>
            <div class="col-6 d-flex align-items-center justify-content-end">
                <RadzenProfileMenu Click="ProfileMenuClick">
                    <Template>
                        <RadzenGravatar Email="@UserName" />
                    </Template>
                    <ChildContent>
                        <RadzenProfileMenuItem Icon="account_circle" Text="Profile (in progress)"></RadzenProfileMenuItem>
                        <RadzenProfileMenuItem Text="Logout" Icon="login"></RadzenProfileMenuItem>
                    </ChildContent>
                </RadzenProfileMenu>
            </div>
        </div>
    </RadzenHeader>
    <RadzenSidebar Responsive="false" Expanded="@isSidebarExpanded">
        <RadzenPanelMenu Match="Microsoft.AspNetCore.Components.Routing.NavLinkMatch.Prefix">
            <RadzenPanelMenuItem Text="Home" Path="/" Icon="home"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Finance" Icon="payments">
                <RadzenPanelMenuItem Text="Dashboard" Path="/finance/dashboard" Icon="dashboard"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Operations" Path="/finance/operations" Icon="money"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Goals" Path="/goals" Icon="flag" />
            <RadzenPanelMenuItem Icon="import_contacts" Text="Diary" Path="/diary"></RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody Expanded="@isSidebarExpanded" Style="color: #000000">
        <RadzenContentContainer Name="main">
            @Body
        </RadzenContentContainer>
    </RadzenBody>
</RadzenLayout>
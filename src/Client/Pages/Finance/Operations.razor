@namespace PAD.Client.Finance

@page "/finance/operations"

<PageTitle>Operations</PageTitle>

<MudText Typo="Typo.h5" Style="margin: 24px 0;">Operations</MudText>

<MudTable ServerData="@(new Func<TableState, Task<TableData<ExpenseViewModel>>>(ServerReload))" Hover="true"
    @ref="table">
    <ToolBarContent>
        <MudTextField T="string" Label="Search" ValueChanged="@(s=>OnSearch(s))" Adornment="Adornment.Start"
            Variant="Variant.Outlined" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small"
            Margin="Margin.Dense" Class="mt-0"></MudTextField>
        <MudSpacer />
        <MudDateRangePicker Label="Period" PickerVariant="PickerVariant.Dialog" DateFormat="dd/MM/yyyy"
            IconSize="Size.Small" Margin="Margin.Dense" InputVariant="Variant.Outlined" TitleDateFormat="dddd, dd MMMM"
            DateRangeChanged="OnDateRangeChange" DateRange="_dateRange" />
        @* <MudButton @onclick="OpenDialog" Variant="Variant.Outlined" Color="Color.Primary">
            Add expense
            </MudButton> *@
    </ToolBarContent>
    <HeaderContent>
        <MudTh>
            <MudTableSortLabel SortLabel="CategoryName" T="ExpenseViewModel">Category</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortLabel="Description" T="ExpenseViewModel">Description</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortLabel="Amount" T="ExpenseViewModel">Amount</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortLabel="CreatedDate" T="ExpenseViewModel">Date</MudTableSortLabel>
        </MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Category">@context.CategoryName</MudTd>
        <MudTd DataLabel="Description">@context.Description</MudTd>
        <MudTd DataLabel="Amount">@context.Amount</MudTd>
        <MudTd DataLabel="CreatedDate">@context.CreatedDate</MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>No matching records found</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Loading...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
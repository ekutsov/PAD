@namespace PAD.Client.Finance

<PageTitle>Operations</PageTitle>

<MudText Typo="Typo.h5" Style="margin: 24px 0;">Operations</MudText>

<MudTable ServerData="@(new Func<TableState, Task<TableData<Models.Expense>>>(ServerReload))" Hover="true"
    @ref="_table" MultiSelection="true" SelectedItems="selectedExpenses" >
    <ToolBarContent>
        <MudTextField T="string" Label="Search" DebounceInterval="500" OnDebounceIntervalElapsed="OnSearchStringChanged"
            Adornment="Adornment.Start" Variant="Variant.Outlined" AdornmentIcon="@Icons.Material.Filled.Search"
            IconSize="Size.Small" @bind-Value="@_searchString" Margin="Margin.Dense" Class="mt-0"></MudTextField>
        <MudSpacer />
        <MudDateRangePicker Label="Period" PickerVariant="PickerVariant.Dialog" DateFormat="dd/MM/yyyy"
            IconSize="Size.Small" Margin="Margin.Dense" InputVariant="Variant.Outlined" TitleDateFormat="dddd, dd MMMM"
            DateRangeChanged="OnDateRangeChange" DateRange="_dateRange" />
        <MudIconButton @onclick="CreateExpense" Icon="@Icons.Material.Outlined.AddCircleOutline" Color="Color.Primary" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>
            <MudTableSortLabel SortLabel="CategoryName" T="Models.Expense">Category</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortLabel="Description" T="Models.Expense">Description</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortLabel="Amount" T="Models.Expense">Amount</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortLabel="CreatedDate" T="Models.Expense">Date</MudTableSortLabel>
        </MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Category">@context.CategoryName</MudTd>
        <MudTd DataLabel="Description">@context.Description</MudTd>
        <MudTd DataLabel="Amount">@context.Amount</MudTd>
        <MudTd DataLabel="CreatedDate">@context.CreatedDate</MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>No matching records found</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Loading...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>